@model Module_21_MVC_Domain.ViewModels.Account.LoginViewModel
@{
    Layout = "_Layout";
}

<form asp-action="Login" asp-controller="Account">
    <div asp-validation-summary="All">

        <p>Login</p>
        <input asp-for= "Name" placeholder="Имя" type="text" />

        <p>Password</p>
        <input asp-for= "Password" placeholder="Пароль" type="password"/> 
         <button type="submit">Подтвердить</button>
    </div>

</form>
